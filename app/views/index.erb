<h1 class='title'>Bookmark Manager</h1>
<form method='post' action='/bookmarks/delete'>
  <% @bookmarks.each do |bookmark| %>
    <input type="checkbox" name="id[]" value="<%=bookmark.id%>">
    <a href="<%=bookmark.url%>" target="_blank">
    <%if bookmark.title == "" then%>
      <%= bookmark.url %>
    <%else%>
      <%=bookmark.title%>
    <%end%>
    </a>
    <hr>
  <% end %>
  <input type='submit' value='Delete Selected'>
</form>
<div id="add_bookmark">
  <form method='post' action='/add'>
    <label for='new'>URL<br>
    <input type='text' id='new' name='url'></label><br><br>
    <label for='title'>Title<br>
    <input type='text' id='title' name='title'></label>
    <br><br>
    <input type='submit' value='Add Bookmark'>
  </form>
</div>
<br>
<span style='color:red'><%= flash[:error]%></span>




